{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "description": "Backend API for task manager application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && node -e \"const fs=require('fs');const path=require('path');if(!fs.existsSync('dist/config'))fs.mkdirSync('dist/config',{recursive:true});fs.readdirSync('src/config').filter(f=>f.endsWith('.sql')).forEach(f=>fs.copyFileSync(path.join('src/config',f),path.join('dist/config',f)));\"",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@uploadthing/react": "^7.3.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "uploadthing": "^7.7.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
